@model AryaPangestu_20250318.Data.Models.Shipment

@{
    ViewData["Title"] = "Create Shipment";
}

<h1>Create Shipment</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5>Shipment Information</h5>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="TrackingNumber" class="control-label"></label>
                        <input asp-for="TrackingNumber" class="form-control" placeholder="Leave empty to auto-generate" />
                        <span asp-validation-for="TrackingNumber" class="text-danger"></span>
                        <small class="form-text text-muted">If left empty, a tracking number will be automatically generated.</small>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-success text-white">
                    <h5>Sender Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="SenderName" class="control-label"></label>
                                <input asp-for="SenderName" class="form-control" />
                                <span asp-validation-for="SenderName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="SenderPhone" class="control-label"></label>
                                <input asp-for="SenderPhone" class="form-control" />
                                <span asp-validation-for="SenderPhone" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="SenderAddress" class="control-label"></label>
                        <textarea asp-for="SenderAddress" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="SenderAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="SenderPostCode" class="control-label"></label>
                        <input asp-for="SenderPostCode" class="form-control" />
                        <span asp-validation-for="SenderPostCode" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h5>Recipient Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="RecipientName" class="control-label"></label>
                                <input asp-for="RecipientName" class="form-control" />
                                <span asp-validation-for="RecipientName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="RecipientPhone" class="control-label"></label>
                                <input asp-for="RecipientPhone" class="form-control" />
                                <span asp-validation-for="RecipientPhone" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="RecipientAddress" class="control-label"></label>
                        <textarea asp-for="RecipientAddress" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="RecipientAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="RecipientPostCode" class="control-label"></label>
                        <input asp-for="RecipientPostCode" class="form-control" />
                        <span asp-validation-for="RecipientPostCode" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-warning">
                    <h5>Package Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Weight" class="control-label"></label>
                                <div class="input-group">
                                    <input asp-for="Weight" class="form-control" />
                                    <span class="input-group-text">kg</span>
                                </div>
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="Length" class="control-label"></label>
                                <div class="input-group">
                                    <input asp-for="Length" class="form-control" />
                                    <span class="input-group-text">cm</span>
                                </div>
                                <span asp-validation-for="Length" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="Width" class="control-label"></label>
                                <div class="input-group">
                                    <input asp-for="Width" class="form-control" />
                                    <span class="input-group-text">cm</span>
                                </div>
                                <span asp-validation-for="Width" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="Height" class="control-label"></label>
                                <div class="input-group">
                                    <input asp-for="Height" class="form-control" />
                                    <span class="input-group-text">cm</span>
                                </div>
                                <span asp-validation-for="Height" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}