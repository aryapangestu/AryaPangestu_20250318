<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Logistics App</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AryaPangestu_20250318.Web.styles.css" asp-append-version="true" />

    <!-- Mazer -->
    <link rel="stylesheet" crossorigin href="~/lib/mazer/compiled/css/app.css">
    <link rel="stylesheet" crossorigin href="~/lib/mazer/compiled/css/app-dark.css">
    <link rel="stylesheet" crossorigin href="~/lib/mazer/compiled/css/iconly.css">
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />

    <!-- Jquery Library -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Jquery Validation -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
</head>
<body>
    <script src="~/lib/mazer/static/js/initTheme.js"></script>
    <div id="app">
        <!-- Sidebar -->
        <partial name="_Sidebar" />

        <div id="main" class="layout-navbar navbar-fixed">
            <partial name="_Header" />

            <div id="main-content">
                <div class="page-content">
                    @RenderBody()
                </div>
            </div>

            <!-- Footer -->
            <partial name="_Footer" />
        </div>
    </div>

    <!-- Mazer -->
    <script src="~/lib/mazer/static/js/components/dark.js"></script>
    <script src="~/lib/mazer/extensions/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/lib/mazer/compiled/js/app.js"></script>

    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
